@{
    ViewData["Title"] = "Home Page";
}

<div class="mt-4 p-5 bg-light text-center">
    <h2 class="display-4">Hello, Editor!</h2>
    <p class="lead mb-1 mt-3">
        This is your editing area - you can <b>read</b>, <b>create</b>,
        <b>delete</b> and <b>edit</b> exercises.
    </p>
   
    <hr class="my-4">
    <span>  |   </span>
    <a asp-area="" asp-controller="Exercise" asp-action="All"
       class="btn btn-primary btn-lg">All Exercises</a>
    <span>  |   </span>
    <a asp-area="Admin" asp-controller="Exercise" asp-action="Add"
       class="btn btn-primary btn-lg">Add Exercise</a>
    <span>  |   </span>
   
</div>