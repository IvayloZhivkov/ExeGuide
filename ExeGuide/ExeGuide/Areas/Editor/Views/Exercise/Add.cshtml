@model ExerciseFormModel
@{
    ViewBag.Title = "Add Houses";
}

<h2 class="text-center" style="color:white">@ViewBag.Title</h2>
<hr />
<div class="row">
    <div style="color:white" class="col-sm-12 offset-lg-2 col-lg-8 offset-xl-3 col-xl-6">
        <form method="post">
            <div class="form-group">
                <label asp-for="Name"></label>
                <input asp-for="Name" class="form-control" placeholder="Title...">
                <span asp-validation-for="Name" class="small text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description"></label>
                <textarea asp-for="Description" rows="4" class="form-control" placeholder="Two bedrooms..."></textarea>
                <span asp-validation-for="Description" class="small text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ImageUrl"></label>
                <input asp-for="ImageUrl" class="form-control" placeholder="Your fine URL here...">
                <span asp-validation-for="ImageUrl" class="small text-danger"></span>
            </div> 
            <div class="form-group">
                <label asp-for="MainCategoryId"></label>
                <select asp-for="MainCategoryId" class="form-control">
                    @foreach (var category in Model.MainCategories)
                    {
                        <option value="@category.Id">@category.Name</option>
                    }
                </select>
                <span asp-validation-for="MainCategoryId" class="small text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SubCategoryId"></label>
                <select asp-for="SubCategoryId" class="form-control">
                    @foreach (var category in Model.SubCategories)
                    {
                        <option value="@category.Id">@category.Name</option>
                    }
                </select>
                <span asp-validation-for="SubCategoryId" class="small text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EquipmentId"></label>
                <select asp-for="EquipmentId" class="form-control">
                    @foreach (var category in Model.Equipments)
                    {
                        <option value="@category.Id">@category.Name</option>
                    }
                </select>
                <span asp-validation-for="EquipmentId" class="small text-danger"></span>
            </div>
            <div class="text-center">
                <input class="btn btn-primary mt-3" type="submit" value="Save" />
            </div>
        </form>
    </div>
</div>


